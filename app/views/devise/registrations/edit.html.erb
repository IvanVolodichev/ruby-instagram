<div class="max-w-md mx-auto bg-white p-4 rounded-lg shadow-sm">
  <h2 class="text-xl font-medium mb-4 text-center">Редактировать профиль</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-3" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Аватар и основные поля в одной строке -->
    <div class="flex items-start gap-4">
      <!-- Аватар -->
      <div class="flex-shrink-0">
        <div class="w-16 h-16 rounded-full overflow-hidden border border-gray-200">
          <% if resource.avatar.attached? %>
            <%= image_tag resource.avatar, class: "w-full h-full object-cover" %>
          <% else %>
            <div class="w-full h-full bg-gray-100 flex items-center justify-center">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
          <% end %>
        </div>
        <%= f.file_field :avatar, class: "hidden", id: "avatar-upload" %>
        <label for="avatar-upload" class="block text-xs text-blue-500 mt-1 text-center cursor-pointer">Сменить</label>
      </div>

      <!-- Имя и почта -->
      <div class="flex-1 space-y-3">
        <div>
          <%= f.label :username, "Имя", class: "sr-only" %>
          <%= f.text_field :username, placeholder: "Имя пользователя", class: "w-full px-3 py-1.5 text-sm border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <div>
          <%= f.label :email, "Почта", class: "sr-only" %>
          <%= f.email_field :email, placeholder: "Электронная почта", class: "w-full px-3 py-1.5 text-sm border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>
    </div>

    <!-- О себе -->
    <div>
      <%= f.label :bio, "О себе", class: "sr-only" %>
      <%= f.text_area :bio, rows: 2, placeholder: "Расскажите о себе...", class: "w-full px-3 py-1.5 text-sm border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Пароли -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
      <div>
        <%= f.label :password, "Новый пароль", class: "sr-only" %>
        <%= f.password_field :password, placeholder: "Новый пароль", class: "w-full px-3 py-1.5 text-sm border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div>
        <%= f.label :password_confirmation, "Подтверждение", class: "sr-only" %>
        <%= f.password_field :password_confirmation, placeholder: "Подтвердите пароль", class: "w-full px-3 py-1.5 text-sm border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>

    <!-- Текущий пароль -->
    <div>
      <%= f.label :current_password, "Текущий пароль", class: "sr-only" %>
      <%= f.password_field :current_password, placeholder: "Текущий пароль (для подтверждения)", class: "w-full px-3 py-1.5 text-sm border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Кнопки -->
    <div class="pt-2 space-y-2">
      <%= f.submit "Сохранить", class: "w-full bg-blue-500 hover:bg-blue-600 text-white text-sm font-medium py-1.5 px-4 rounded transition duration-200 cursor-pointer" %>
      <%= link_to "Назад", :back, class: "block text-center text-sm text-blue-500 hover:text-blue-700" %>
    </div>
  <% end %>

  <!-- Удаление аккаунта -->
  <div class="mt-4 pt-3 border-t border-gray-200">
    <%= button_to "Удалить аккаунт", registration_path(resource_name), 
        data: { confirm: "Вы уверены?", turbo_confirm: "Вы уверены?" }, 
        method: :delete, 
        class: "text-xs text-red-500 hover:text-red-700" %>
  </div>
</div>